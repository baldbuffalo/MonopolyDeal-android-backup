<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Disallow cleartext traffic for all domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system default CA -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
